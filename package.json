{
    "name": "sikontrol-app",
    "productName": "Sikontrol",
    "version": "1.0.0",
    "description": "Audio controller for Windows",
    "main": "server.js",
    "scripts": {
        "start": "electron .",
        "dist": "electron-builder",
        "pack": "electron-builder --dir"
    },
    "author": {
        "name": "Sik'",
        "email": "sikeliodev@gmail.com",
        "url": "https://github.com/oskardn/"
    },
    "build": {
        "appId": "fr.sik.sikontrol-app",
        "nodeGypRebuild": false,
        "win": {
            "target": [
                "nsis"
            ],
            "icon": ""
        },
        "nsis": {
            "oneClick": false,
            "installerIcon": "src/global/img/icon.ico",
            "uninstallerIcon": "src/global/img/icon.ico",
            "uninstallDisplayName": "Sikontrol",
            "license": "LICENSE.md",
            "allowToChangeInstallationDirectory": true
        }
    },
    "license": "MIT",
    "dependencies": {
        "body-parser": "^1.19.1",
        "detect-port": "^1.3.0",
        "express": "^4.17.3",
        "node-audio-volume-mixer": "^1.0.2",
        "open": "^8.4.0",
        "sendinput": "^0.2.0",
        "socket.io": "^4.4.1",
        "sqlite3": "^5.0.6",
        "win-audio": "^2.0.2"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/oskardn/sikontrol.git"
    },
    "keywords": [
        "nodejs",
        "node",
        "macros",
        "key",
        "node-js",
        "macro",
        "keysender",
        "audio",
        "audio controller",
        "node audio",
        "node controller"
    ],
    "bugs": {
        "url": "https://github.com/oskardn/sikontrol/issues"
    },
    "homepage": "https://github.com/oskardn/sikontrol#readme",
    "devDependencies": {
        "electron": "^17.1.1",
        "electron-builder": "^22.14.13"
    }
}
